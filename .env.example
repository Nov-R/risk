# 环境配置文件示例
# 复制此文件为 .env 并根据实际环境配置

# 应用配置
APP_NAME="风险管理系统"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# 数据库配置
DB_HOST=localhost
DB_DATABASE=risk_management
DB_USERNAME=root
DB_PASSWORD=

# Redis 缓存配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# 日志配置
LOG_LEVEL=info
LOG_PATH=logs/app.log

# JWT 认证配置
JWT_SECRET=your-secret-key-here
JWT_EXPIRE_TIME=3600

# API 限流配置
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx